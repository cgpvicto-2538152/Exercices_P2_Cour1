        <Class>
            <Personne>
                <summary>
                    Classe qui définit l'instance d'une personne.
                </summary>
            </Personne>
        </Class>
        <Methodes>
            <Nom>
                <summary>
                    Nom de la personne.
                </summary>
                <value> Obtient ou définit le nom de la personne. <br /> La valeur ne peut pas être
                    null ou vide. </value>
                <exception cref="System.ArgumentNullException">La valeur est null.</exception>
                <exception cref="System.ArgumentException">La valeur est vide.</exception>
            </Nom>
            <Prenom>
                <summary>
                    Prénom de la personne.
                </summary>
                <value> Obtient ou définit le prénom de la personne. <br /> La valeur ne peut pas
                    être null ou vide. </value>
                <exception cref="System.ArgumentNullException">La valeur est null.</exception>
                <exception cref="System.ArgumentException">La valeur est vide.</exception>
            </Prenom>
            <Age>
                <summary>
                    Âge de la personne.
                </summary>
                <value> Obtient ou définit l'âge de la personne. <br /> L'âge doit être supérieur ou
                    égal à 0. </value>
                <exception cref="System.ArgumentOutOfRangeException">L'âge est négatif.</exception>
                <exception cref="System.ArgumentException">L'âge est nul.</exception>
            </Age>
            <Constructeur>
                <summary>
                    Constructeur de la classe Personne.
                </summary>
                <param name="nom">Nom de la personne</param>
                <param name="prenom">Prénom de la personne</param>
                <param name="age">Âge de la personne</param>
            </Constructeur>
            <Vieillir>
                <summary>
                    Permet de faire vieillir la personne d'un an.
                </summary>
            </Vieillir>
            <ToString>
                <summary>
                    Retourne une représentation textuelle de la personne,
                    comprenant le prénom, le nom et l'âge.
                </summary>
                <returns>
                    Une chaîne contenant le prénom, le nom et l'âge de la personne.
                </returns>
            </ToString>
        </Methodes>
